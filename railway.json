{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "server/Dockerfile"
    },
    "deploy": {
        "startCommand": "npx prisma db push && npm run start:prod",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}